<main class="main-content">
    <h2 class="page-title">Single Blog</h2>
    <form action="/blogs" method="POST">
        <label for="blog_title">Blog Title</label>
        <input type="text" id="blog_title" name="title">
        <label for="blog_author">Blog Author</label>
        <input type="text" id="blog_author" name="author">
        <label for="blog_content">Blog Content</label>
        <textarea name="content" id="blog_content" cols="30" rows="10">

        </textarea>
        <input type="submit" value="Create Blog">
        <a href="/blogs">Cancel and Go to Main Blogs Page</a>

    </form>
</main>